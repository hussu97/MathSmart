<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pythagorithm.mathsmartv2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Assignments"
            android:screenOrientation="landscape"/>
        <activity android:name=".assignmentPreview"
            android:screenOrientation="landscape"/>
        <activity android:name=".assignmentQuestion"
            android:screenOrientation="landscape"/>
        <activity android:name=".addQuestion"
            android:screenOrientation="landscape"/>
        <activity android:name=".LoginActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Sections"
            android:screenOrientation="landscape"></activity>
    </application>

</manifest>